@model BuyStuff.GE.MVC.Models.ItemModel

@{
    ViewData["Title"] = "ViewDetails";
}

<style>
    .details-container {
        display: flex;
        flex-wrap: wrap;
    }

    .details-left {
        flex: 1;
        padding-right: 20px; 
    }

    .details-right {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .details-right img {
            max-width: 100%;
            max-height: 100%;
            border-radius: 20px;
        }

    .button-row {
        display: flex;
    }

        .button-row a {
            text-decoration: none;
        }
</style>


<div class="details-container">
    <div class="details-left">
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
        </dl>
        <div>
            <a asp-action="DeleteItem" asp-route-itemId="@Model.Id"
               style="color: white; background-color: red; padding: 10px; border-radius: 5px; margin-top:10px">Delete Item</a>
        </div>

        <div class="button-row">
            @Html.ActionLink("Edit", "EditItem", new { itemId = Model.Id },
            new { style = "color: white; background-color: green; padding: 5px; margin-top:10px; border-radius: 5px; margin-right: 5px;" })

            <a asp-action="Index" style="color: white; background-color: gray; padding: 5px; margin-top:10px; border-radius: 5px ;margin-top:10px;">Back to List</a>
        </div>
    </div>

    <div class="details-right">
        @{
            string fullPath = Model.Images.Count > 0 && !string.IsNullOrEmpty(Model.Images[0].ImgName)
            ? "~/images/" + Model.Images[0].ImgName
            : "~/images/noimage.jpg";
        }
        <img src="@fullPath" asp-append-version="true" />
    </div>
</div>
